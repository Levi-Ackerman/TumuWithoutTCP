<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <RelativeLayout
        android:id="@+id/lay_curve_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.71" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <Switch
            android:id="@+id/sw_curve_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="停止"
            android:textOn="开始" />

        <Button
            android:id="@+id/btn_curve_save"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sw_curve_start"
            android:text="保存" />

        <Button
            android:id="@+id/btn_curve_jiagong"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_curve_save"
            android:text="加工" />

        <TextView
            android:id="@+id/tv_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_curve_save"
            android:text="TextView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入主机ip"
            android:id="@+id/editText"
            android:layout_below="@+id/tv_acc"
            android:layout_alignLeft="@+id/btn_curve_save"
            android:layout_alignStart="@+id/btn_curve_save"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入端口号"
            android:id="@+id/editText3"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:id="@+id/button"
            android:layout_above="@+id/tv_acc"
            android:layout_toRightOf="@+id/btn_curve_jiagong"
            android:layout_toEndOf="@+id/btn_curve_jiagong" />

       </RelativeLayout>

</LinearLayout>